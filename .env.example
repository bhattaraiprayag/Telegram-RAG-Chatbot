# ================================
# TELEGRAM RAG BOT CONFIGURATION
# ================================

# Telegram Bot Token (from @BotFather)
TELEGRAM_TOKEN=your-telegram-bot-token-here

# ================================
# MODEL PROVIDER CONFIGURATION
# ================================

# Provider: only "openai" supported for this bot
DEFAULT_PROVIDER=openai

# Model name for OpenAI (gpt-4o recommended)
DEFAULT_MODEL=gpt-4o

# ================================
# OPENAI CONFIGURATION
# ================================

# Your OpenAI API key
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# ================================
# SERVICE URLS
# ================================

# Qdrant vector database
QDRANT_URL=http://localhost:6333

# ML API for embeddings and reranking (BGE-M3 + BGE-Reranker)
ML_API_URL=http://localhost:8001

# ================================
# CACHING CONFIGURATION
# ================================

# Maximum number of query embeddings to cache in memory
EMBEDDING_CACHE_SIZE=1000

# ================================
# CONVERSATION HISTORY
# ================================

# Maximum conversation turns to maintain per user (in-memory)
MAX_HISTORY_TURNS=3

# ================================
# HUGGINGFACE CONFIGURATION
# ================================

# Directory for model cache (tokenizers)
HF_HOME=./models_cache

# ================================
# HTTP CLIENT CONFIGURATION
# ================================

# Timeout for HTTP requests to ML-API (seconds)
HTTP_TIMEOUT=120.0
